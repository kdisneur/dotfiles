[alias]

  br = branch
  ci = commit -S
  cleanlocal = "!git_cleanlocal() { git branch --merged ${1:-develop} | grep -v master | grep -v develop | xargs git branch -d; }; git_cleanlocal"
  co = checkout
  create-feature = !sh -c 'git checkout -b feature/$1' -
  create-hotfix = !sh -c 'git checkout -b hotfix/$1' -
  create-release = !sh -c 'git checkout -b release/v$1' -
  create-tag = !sh -c 'git tag -s --message=\"Bump to v$1\" v$1 $2' -
  current = rev-parse --abbrev-ref HEAD
  d  = diff
  dc = diff --cached
  exec = ! exec
  g  = grep --break --heading --line-number
  l  = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%ci) %C(bold blue)<%an>%Creset' --abbrev-commit
  oops = commit -S --amend --no-edit
  push = push --set-upstream
  pf = push --force-with-lease
  pff = push --force-with-lease --no-verify
  pr = !open "https://github.com/$(git remote get-url --push origin | sed -e 's/.*://' -e 's/\\.git//')/compare/$(git current | sed 's/#/%23/g')?expand=1"
  s  = status --branch --short
  serve-ro = !git daemon --reuseaddr --verbose  --base-path=. --export-all --informative-errors --verbose ./.git
  serve-rw = !git daemon --reuseaddr --verbose  --base-path=. --export-all --enable=receive-pack --informative-errors --verbose ./.git
  root = rev-parse --show-toplevel

[color]

  diff = true
  ui = true

[color "diff"]

  whitespace = red

[core]

  excludesfile = ~/.gitignore
  pager = less -F -X


[fetch]

  prune = true

[grep]

  extendRegexp = true
  lineNumber = true

[include]

  path = ~/.gitconfig.local

[init]

  templatedir = ~/.git_template

[push]

  default = current

[user]

  email = kevin@disneur.me
  name = Kevin Disneur
  useconfigonly = true
